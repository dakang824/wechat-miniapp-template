.answer {
  margin-top: 25rpx;
}

.answer__swipe {
  height: calc(100vh - 197rpx);
  overflow: auto;
  width: 100wh;
  margin: 30rpx 0 0;
  position: relative;
}

.answer__swipe swiper-item {
  overflow: auto;
}

.answer__swipe-item {
  padding: 0 30rpx 30rpx;
}

.answer__swipe-item__checkbox {
  margin-right: 16rpx;
}

.answer__swipe-item__total {
  color: #999;
  font-size: 26rpx;
}

.answer__swipe-item__title {
  font-size: 32rpx;
  padding: 25rpx 0;
}

.answer__swipe-item__ul {
  padding-top: 25rpx;
}

.answer__swipe-item__ul__li {
  background: #f5f5f5;
  border-radius: 10rpx;
  padding: 30rpx 25rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.answer__swipe-item__ul__li .icon_right {
  position: absolute !important;
  right: 25rpx;
}

.answer__swipe-item__ul__li.error {
  background: #fff1f2;
  color: #ff665b;
}

.answer__swipe-item__ul__li.success {
  background: #e7fffb;
  color: #1cbc9a;
}

.answer__swipe-item__ul .btn {
  width: 150rpx;
  margin-top: 30rpx;
}

.answer__swipe-item__footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  -webkit-box-shadow: 0px -10px 10px 0px rgba(153, 153, 153, 0.05);
          box-shadow: 0px -10px 10px 0px rgba(153, 153, 153, 0.05);
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
  background: #fff;
}

.answer__swipe-item__footer__left,
.answer__swipe-item__footer .right,
.answer__swipe-item__footer .wrong {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
}

.answer__swipe-item__footer__left text,
.answer__swipe-item__footer .right text,
.answer__swipe-item__footer .wrong text {
  padding-left: 10rpx;
}

.answer__swipe-item__footer .right {
  color: #1cbc9a;
}

.answer__swipe-item__footer .wrong {
  margin-left: 40rpx;
  color: #ff665b;
}
