<wxs src="../../../wxs/utils.wxs" module="utils" />
<container class="qr-code">
  <view class="qr-code__content">
    <!-- bindtap="handleClick" -->
    <view class="qr-code__box">
      <view class="qr-code__box__left-top"></view>
      <view class="qr-code__box__right-top"></view>
      <view class="qr-code__box__left-bottom"></view>
      <view class="qr-code__box__right-bottom"></view>

      <van-image
        width="280rpx"
        height="280rpx"
        src="{{utils.baseUrl(qr_path)}}"
        class="qr-code__box__img"
      />

      <canvas
        class="canvas-code"
        canvas-id="myQrcode"
        style="background:#fff;width: 100%;height: 100%;"
      />
    </view>
    <view class="qr-code__tip">老师扫码进行技能树审核</view>
  </view>
</container>
