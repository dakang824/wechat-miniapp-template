.view-wrap {
  width: 100vw;
  overflow: hidden;
  position: relative;
}

.view-wrap__empty {
  position: absolute;
  top: 35%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  padding: 30rpx;
  text-align: center;
}

.view-wrap .empty-image {
  width: 200rpx;
  height: 200rpx;
  margin: 160rpx auto 60rpx;
}

.view-wrap .empty-text {
  color: #999999;
}

.scroll-view {
  width: calc(100vw + 20rpx);
}

.block-wrap {
  position: relative;
  width: 100%;
  padding-right: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}

.block__title {
  height: 60rpx;
  line-height: 60rpx;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 2;
  background: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  color: #767676;
}

.block__title > .title-item {
  border-top: 1rpx solid #e4e7ed;
  border-bottom: 1rpx solid #e4e7ed;
  padding: 0 20rpx;
  background: #ededed;
}

.block__title--cur {
  color: #1cbc9a;
}

.block__title--cur > .title-item {
  background: #ffffff;
}

.block__item {
  background: #ffffff;
  padding: 30rpx 20rpx;
}

.block__item:not(:last-child) {
  border-bottom: 1rpx solid #e4e7ed;
}

.item {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
}

.item__hd {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  font-weight: bold;
  line-height: 80rpx;
  text-align: center;
  margin-right: 20rpx;
  color: #ffffff;
}

.info__name {
  margin-bottom: 10rpx;
}

.info__title {
  color: #333;
}

.indicator {
  position: fixed;
  right: 140rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 100rpx;
  color: #ffffff;
  font-size: 60rpx;
  font-weight: bold;
  display: none;
  z-index: 3;
}

.indicator:after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  border-radius: 100% 0% 100% 100%;
  background: rgba(0, 0, 0, 0.3);
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}

.indicator--show {
  display: block;
}

.indicator--tran {
  display: block;
  opacity: 0;
  -webkit-transition: opacity 0.3s linear;
  transition: opacity 0.3s linear;
}

.tree {
  position: fixed;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  text-align: center;
  z-index: 3;
}

.tree__item {
  font-size: 20rpx;
  padding: 0rpx 8rpx;
  color: #333;
  font-weight: bold;
}

.tree__item > .key {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  line-height: 32rpx;
}

.tree__item--cur > .key {
  background: #1cbc9a;
  color: #ffffff;
  border-radius: 50%;
}
